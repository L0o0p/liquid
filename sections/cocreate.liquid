<div class="cocreate-container">
  <div class="cocreate-image">
    {% if section.settings.image != blank %}
      {% assign img_url = section.settings.image | image_url: width: 600 %}
      {% assign img_alt = section.settings.image.alt | escape %}

      {{
        img_url
        | image_tag:
          loading: 'lazy',
          alt: img_alt,
          class: 'cocreate-img',
          widths: '275, 550, 710, 1100, 1500',
          sizes: '(min-width: 750px) 50vw, 100vw'
      }}
    {% else %}
      {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
    {% endif %}
  </div>

  <div class="cocreate-content">
    {% if section.settings.show_tag %}
      <div class="activity-tag">
        <svg viewBox="0 0 24 24" fill="currentColor">
          <path d="M19 3h-4.18C14.4 1.84 13.3 1 12 1s-2.4.84-2.82 2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-7 0c.55 0 1 .45 1 1s-.45 1-1 1-1-.45-1-1 .45-1 1-1zm0 15l-5-5h3V9h4v4h3l-5 5z"/>
        </svg>
        {{ section.settings.tag_text }}
      </div>
    {% endif %}

    <h2 class="cocreate-title">{{ section.settings.title }}</h2>

    {% if section.settings.limited_text != blank %}
      <p class="limited-text">{{ section.settings.limited_text }}</p>
    {% endif %}

    <div class="cocreate-description">
      {{ section.settings.description }}
    </div>

    {% if section.settings.button_text != blank and section.settings.button_link != blank %}
      <a href="{{ section.settings.button_link }}" class="cocreate-button">
        {{ section.settings.button_text }}
      </a>
    {% endif %}
  </div>
</div>

{% style %}
  .cocreate-container {
    display: flex;
    align-items: center;
    max-width: {{ section.settings.section_width }}px;
    margin: 0 auto;
    padding: {{ section.settings.section_padding_top }}px {{ section.settings.section_padding_sides }}px {{ section.settings.section_padding_bottom }}px;
    gap: {{ section.settings.gap }}px;
    height:928px;
  }

  .cocreate-image {
    flex: 1;
    position: relative;
  }

  .cocreate-image img {
    width: 100%;
    height: auto;
    border-radius: {{ section.settings.image_border_radius }}px;
    {% if section.settings.grayscale %}
      filter: grayscale(100%);
    {% endif %}
  }

  .cocreate-content {
    flex: 1;
    max-width: 500px;
  }

  .activity-tag {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 4px 12px;
    background-color: {{ section.settings.tag_bg_color }};
    border-radius: 4px;
    margin-bottom: 20px;
    color: {{ section.settings.tag_text_color }};
    font-size: 14px;
  }

  .activity-tag svg {
    width: 16px;
    height: 16px;
  }

  .cocreate-title {
    font-size: {{ section.settings.title_size }}px;
    font-weight: bold;
    margin-bottom: 16px;
    color: {{ section.settings.title_color }};
  }

  .limited-text {
    color: {{ section.settings.limited_text_color }};
    font-size: 16px;
    margin-bottom: 20px;
  }

  .cocreate-description {
    color: {{ section.settings.description_color }};
    font-size: {{ section.settings.description_size }}px;
    line-height: 1.6;
    margin-bottom: 32px;
  }

  .cocreate-button {
    display: inline-block;
    padding: 12px 32px;
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    border-radius: 4px;
    text-decoration: none;
    font-weight: 500;
    transition: background-color 0.3s;
  }

  .cocreate-button:hover {
    background-color: {{ section.settings.button_hover_color }};
  }

  @media (max-width: 768px) {
    .cocreate-container {
      flex-direction: column;
      padding: {{ section.settings.mobile_padding_top }}px {{ section.settings.mobile_padding_sides }}px {{ section.settings.mobile_padding_bottom }}px;
      gap: {{ section.settings.mobile_gap }}px;
    }

    .cocreate-content {
      max-width: 100%;
    }

    .cocreate-title {
      font-size: {{ section.settings.mobile_title_size }}px;
    }

    .cocreate-description {
      font-size: {{ section.settings.mobile_description_size }}px;
    }
  }
{% endstyle %}

