{% style %}
  .success-page {
    text-align: center;
    padding: 3rem 1rem;
    max-width: 600px;
    margin: 0 auto;
  }
  
  .success-icon {
    font-size: 4rem;
    color: #12a89d;
    margin-bottom: 1.5rem;
  }
  
  .success-title {
    font-size: 2.2rem;
    color: #fd6020;
    margin-bottom: 1rem;
    font-weight: 700;
  }
  
  .success-message {
    font-size: 1.2rem;
    color: #333;
    margin-bottom: 2.5rem;
    line-height: 1.6;
  }
  
  .btn-custom {
    display: inline-block;
    padding: 12px 30px;
    background-color: #fd6020;
    color: white;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1.1rem;
    transition: all 0.3s ease;
    margin: 0.5rem;
    border: none;
    cursor: pointer;
  }
  
  .btn-custom:hover {
    background-color: #e0551b;
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(253, 96, 32, 0.3);
  }
  
  .btn-secondary {
    background-color: #12a89d;
  }
  
  .btn-secondary:hover {
    background-color: #0f8f86;
  }
  
  .button-group {
    margin-top: 2rem;
  }
  
  .confetti {
    position: absolute;
    width: 10px;
    height: 10px;
    background-color: #fd6020;
    opacity: 0.7;
  }
{% endstyle %}

<div class="success-page">
  <!-- 成功图标 -->
  <div class="success-icon">🎉</div>
  
  <!-- 成功标题 -->
  <h1 class="success-title">登录成功!</h1>
  
  <!-- 成功消息 -->
  <p class="success-message">
    欢迎回来！您已成功登录您的账户。<br>
    现在可以开始愉快的购物体验了！
  </p>
  
  <!-- 按钮组 -->
  <div class="button-group">
    <!-- 主按钮 - 跳转到首页 -->
    <!-- <a href="{{ routes.root_url }}" class="btn-custom">
      前往首页
    </a> -->
    
    <!-- 次级按钮 - 跳转到用户中心 -->
    <a href="{{ pages['test'].url }}" class="btn-custom btn-secondary">
      跳转到测试页面
    </a>
    
    <!-- 自定义按钮 - 可以修改href值跳转到任意页面 -->
    {% comment %}
      修改下面href的值可以跳转到任意页面，例如:
      - {{ collections['frontpage'].url }} (跳转到特定集合)
      - {{ pages['contact'].url }} (跳转到联系页面)
      - /collections/all (跳转到所有商品)
    {% endcomment %}
    <!-- <a href="/collections/all" class="btn-custom" style="background-color: #6ab7ff;">
      浏览商品
    </a> -->
  </div>
</div>

<!-- 简单的庆祝效果 -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    // 创建五彩纸屑效果
    function createConfetti() {
      const colors = ['#fd6020', '#12a89d', '#6ab7ff', '#ffde59', '#ffffff'];
      const confetti = document.createElement('div');
      confetti.className = 'confetti';
      confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
      confetti.style.left = Math.random() * 100 + 'vw';
      confetti.style.top = -10 + 'px';
      confetti.style.transform = 'rotate(' + Math.random() * 360 + 'deg)';
      
      document.body.appendChild(confetti);
      
      let position = -10;
      let rotation = Math.random() * 360;
      const fallInterval = setInterval(() => {
        position += 5;
        rotation += 5;
        confetti.style.top = position + 'px';
        confetti.style.transform = 'rotate(' + rotation + 'deg)';
        
        if (position > window.innerHeight) {
          clearInterval(fallInterval);
          confetti.remove();
        }
      }, 30);
    }
    
    // 创建50个五彩纸屑
    for (let i = 0; i < 50; i++) {
      setTimeout(createConfetti, i * 100);
    }
  });
</script>
