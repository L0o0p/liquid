{{ 'section-svg-bg-card.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px !important;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px !important;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px !important;
      padding-bottom: {{ section.settings.padding_bottom }}px !important;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding section-{{ section.id }} svg-bg-card">

  <div class="s-page-width">
    <h3>
      {{ section.settings.title }}
    </h3>
    <div class="card-bg-warpper">
      <div>
        <img class="header-image dis-md-none" src="{{ section.settings.image |img_url: 'master' }}" alt=""/>
        <img class="header-image_mb dis-none dis-md-block" src="{{ section.settings.image_mb |img_url: 'master' }}" alt=""/>
      </div>
      <div class="card-box">
        {%- for block in section.blocks -%}
          <div class="radius card-content">
            <div class="card-svg">
              {{ block.settings.svg }}
            </div>
            <div>
              <div class="card-title">
                {{ block.settings.title }}
              </div>
              <div class="card-desc">
                {{ block.settings.description }}
              </div>
            </div>
          </div>
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>


{% schema %}
{
  "name": "Svg background card",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Title"
    },
    {
      "type": "image_picker",
      "label": "Image",
      "id": "image"
    },
    {
      "type": "image_picker",
      "label": "Image(mb)",
      "id": "image_mb"
    }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Svg card",
      "settings": [
        {
					"type": "html",
					"id": "svg",
					"label": "SVG"
				},
        {
          "type": "text",
          "id": "title",
          "default": "Title",
          "label": "Title"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Svg background card"
    }
  ]
}
{% endschema %}
