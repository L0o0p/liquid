"label": "text"
},
{
"type": "text",
"id": "structureList_title1",
"label": "title"
},
{
"type": "richtext",
"id": "structureList_text1",
"label": "text"
},
{
"type": "text",
"id": "structureList_title2",
"label": "title"
},
