{%- liquid
  assign animation_effect = settings.animations
  assign animated = false
  if animation_effect != 'none'
    assign animated = true
    if section.settings.animations != 'inherit'
      assign animation_effect = section.settings.animations
    endif
  endif

  assign container = section.settings.container
  if container == 'w-full'
    assign container = 'container-full'
  endif

  assign classes = 'm-section m-collapsible-section'
  if section.settings.custom_class != blank
    assign classes = classes | append: ' ' | append: section.settings.custom_class
  endif
  assign classes = classes | append: ' m-gradient' | append: ' m-color-' | append: section.settings.color_scheme

  assign image = section.settings.image
  assign image_position = section.settings.image_position
-%}
<style>
    #m-collapsible--{{ section.id }} {
      --section-padding-top: {{ section.settings.padding_top }}px;
      --section-padding-bottom: {{ section.settings.padding_bottom }}px;
      background-color:#FFF4A9;
    }
    .m-collapsible__wrapper {
      display: grid;
    }
    .m-collapsible--image-right .m-collapsible__image {
      order: 1;
    }

  .container {
    height: 780px;
}

      @media (max-width: 1366px) {
    .faq-container {
    padding:64px
  }
    }
    @media (max-width:480px){
      .container{
        height:779px;
        width:100%;
        padding:0
      }

      .faq-container {
        padding:20px;
      }

      .faq-title {
        margin:0;
        font-size:24px !important;
        font-weight:500!important;
      }

      .faq-question h3 {
          font-size:20px !important;
        font-weight:400!important;
      }

      .rte p:last-child {
          font-size:14px !important;

      }
    }

    @media (max-width: 1080px) {
      .container{
        height:850px
      }
    }

    @media (min-width: 768px) {
      .m-collapsible__wrapper {
        grid-template-columns: 1fr 1fr;
        column-gap: var(--column-gap);
        align-items: center;
      }

      .container{
        {% comment %} justify-content:flex-start; {% endcomment %}
      }

      .faq-container {
          flex-direction: row !important;
          gap: 30px;
          flex-wrap:nowrap;
          padding:0;
      }
          .faq-title {
          flex: 1 !important;
          font-size: 32px;
          flex-wrap: wrap !important;
      }
    }
    @media (max-width: 767px) {
      .m-collapsible__image {
        margin-bottom: 24px;
      }
      .m-collapsible--image-right .m-collapsible__image {
        margin-bottom: 0;
        margin-top: 24px;
      }
    }

    /* FAQ Specific Styles */
    .faq-container {
      max-width: 100%;
      display: flex;
      gap: 60px;
    }

    .faq-title {
      font-size: 42px;
      font-weight: bold;
      flex: 0 0 400px;
      margin-top:12px;
    }

    .faq-list {
      flex: 1;
    }

    .faq-item {
      /* Removed border-bottom */
      padding: 12px 0;
    }

    .faq-question {
      display: flex;
      justify-content: space-between;
      align-items: center;
      cursor: pointer;
      padding: 12px 0;
    }

    .faq-question h3 {
      font-size: 20px;
      margin: 0;
      font-weight: 500;
    }

    .faq-answer {
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.3s ease-out;
      line-height: 1.6;
      color: #666;
    }

    .faq-answer.active {
      max-height: 500px;
      padding-top: 8px;
      padding-bottom: 16px;
    }

    .faq-icon {
      width: 24px;
      height: 24px;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: transform 0.3s ease;
    }

    .faq-icon::after {
      content: '>';
      font-size: 24px;
      transform: rotate(90deg);
      transition: transform 0.3s ease;
      display: block;
    }

    .faq-icon.active::after {
      transform: rotate(-1deg);
    }

    @media (max-width: 768px) {
      .faq-container {
        flex-direction: column;
        gap: 30px;
      }

      .faq-title {
        flex: none;
        font-size: 32px;
      }
    }
</style>

{% if section.blocks.size > 0 %}
  <section
    id="m-collapsible--{{ section.id }}"
    class="{{ classes }}"
    data-section-type="m-collapsible"
    data-section-id="{{ section.id }}"
  >
    <div class="{{ container }} m-section-my m-section-py">
      {% if image != blank %}
        <div
          class="m-collapsible__wrapper m-collapsible--image-{{ image_position }}"
          style="--column-gap: {{ section.settings.column_gap }}px;"
        >
      {% endif %}

      {% if image != blank %}
        {% liquid
          assign image_height = image.width | divided_by: image.aspect_ratio | round
        %}
        <div class="m-collapsible__image">
          {{
            image
            | image_url: width: 3840
            | image_tag:
              loading: 'lazy',
              width: image.width,
              height: image_height,
              sizes: '100vw',
              widths: '375, 550, 750, 1100, 1500',
              alt: image.alt
            | escape
          }}
        </div>
      {% endif %}

      {% if image != blank %}<div class="m-collapsible__content-wrapper">{% endif %}

      <!-- FAQ Style Layout -->
      <div class="faq-container">
        <h2 class="faq-title">{{ section.settings.heading }}</h2>

        <div class="faq-list">
          {% for block in section.blocks %}
            <div class="faq-item" {{ block.shopify_attributes }}>
              <div class="faq-question" data-block-id="faq-question-{{ block.id }}">
                <h3>{{ block.settings.header }}</h3>
                <div class="faq-icon"></div>
              </div>
              <div class="faq-answer">
                {% case block.type %}
                  {% when 'item' %}
                    <div class="rte">
                      {{ block.settings.content }}
                      {{ block.settings.content_page.content }}
                    </div>
                  {% when 'liquid' %}
                    {{ block.settings.custom_liquid }}
                  {% else %}

                {% endcase %}
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
      <!-- End FAQ Style Layout -->

      {% if image != blank %}</div>{% endif %}
      {% if image != blank %}</div>{% endif %}
    </div>
  </section>
{% endif %}

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const questions = document.querySelectorAll('.faq-question');

    questions.forEach((question) => {
      question.addEventListener('click', () => {
        const answer = question.nextElementSibling;
        const icon = question.querySelector('.faq-icon');

        answer.classList.toggle('active');
        icon.classList.toggle('active');

        questions.forEach((q) => {
          if (q !== question) {
            q.nextElementSibling.classList.remove('active');
            q.querySelector('.faq-icon').classList.remove('active');
          }
        });
      });
    });

    // Support for Shopify's section rendering events
    if (typeof Shopify !== 'undefined' && Shopify.designMode) {
      document.addEventListener('shopify:section:load', function (event) {
        const sectionQuestions = event.detail.sectionContainer.querySelectorAll('.faq-question');

        sectionQuestions.forEach((question) => {
          question.addEventListener('click', () => {
            const answer = question.nextElementSibling;
            const icon = question.querySelector('.faq-icon');

            answer.classList.toggle('active');
            icon.classList.toggle('active');

            sectionQuestions.forEach((q) => {
              if (q !== question) {
                q.nextElementSibling.classList.remove('active');
                q.querySelector('.faq-icon').classList.remove('active');
              }
            });
          });
        });
      });
    }
  });
</script>

