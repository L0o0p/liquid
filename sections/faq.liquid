        /* Removed border-bottom */
        padding: 12px 0;
      }

      .faq-question {
        display: flex;
        justify-content: space-between;
        align-items: center;
        cursor: pointer;
        padding: 12px 0;
      }

      .faq-question h3 {
        font-size: 20px;
        margin: 0;
        font-weight: 500;
      }

      .faq-answer {
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.3s ease-out;
        line-height: 1.6;
        color: #666;
      }

      .faq-answer.active {
        max-height: 500px;
        padding-top: 8px;
        padding-bottom: 16px;
      }

      .faq-icon {
        width: 24px;
        height: 24px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: transform 0.3s ease;
      }

      .faq-icon::after {
        content: '>';
        font-size: 24px;
        transform: rotate(90deg);
        transition: transform 0.3s ease;
        display: block;
      }

      .faq-icon.active::after {
        transform: rotate(-1deg);
      }

      @media (max-width: 768px) {
        .faq-container {
          flex-direction: column;
          gap: 30px;
        }

        .faq-title {
          flex: none;
          font-size: 32px;
        }
