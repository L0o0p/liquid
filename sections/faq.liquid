{% if section.blocks.size > 0 %}
  <section
    id="m-collapsible--{{ section.id }}"
    class="{{ classes }}"
    data-section-type="m-collapsible"
    data-section-id="{{ section.id }}"
  >
    <div class="{{ container }} m-section-my m-section-py" style="gap:72px">
      {% if image != blank %}
        <div
          class="m-collapsible__wrapper m-collapsible--image-{{ image_position }}"
          style="--column-gap: {{ section.settings.column_gap }}px;"
        >
      {% endif %}

      {% if image != blank %}
        {% liquid
          assign image_height = image.width | divided_by: image.aspect_ratio | round
        %}
        <div class="m-collapsible__image">
          {{
            image
            | image_url: width: 3840
            | image_tag:
              loading: 'lazy',
              width: image.width,
              height: image_height,
              sizes: '100vw',
              widths: '375, 550, 750, 1100, 1500',
              alt: image.alt
            | escape
          }}
        </div>
      {% endif %}

      {% if image != blank %}<div class="m-collapsible__content-wrapper">{% endif %}

      <!-- 第一组 -->
      <div class="faq-container">
        <div class="container-header">
          <h2 class="faq-title">{{ section.settings.heading }}</h2>
          <div class="faq-description">{{ section.settings.description }}</div>
        </div>
        <div class="faq-list">
          {% for block in section.blocks %}
            {% if block.type == 'item' or block.type == 'liquid' %}
              <div class="faq-item">
                <div class="faq-question">
                  <h3>{{ block.settings.header }}</h3>
                  <div class="faq-icon"></div>
                </div>
                <div class="faq-answer">
                  {% case block.type %}
                    {% when 'item' %}
                      <div class="rte">
                        {{ block.settings.content }}
                        {{ block.settings.content_page.content }}
                      </div>
                    {% when 'liquid' %}
                      {{ block.settings.custom_liquid }}
                  {% endcase %}
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>

      <!-- 第二组 -->
      <div class="faq-container">
        <div class="container-header">
          <h2 class="faq-title">{{ section.settings.heading_2 }}</h2>
          <div class="faq-description">{{ section.settings.description_2 }}</div>
        </div>
        <div class="faq-list">
          {% for block in section.blocks %}
            {% if block.type == 'item_2' or block.type == 'liquid_2' %}
              <div class="faq-item">
                <div class="faq-question">
                  <h3>{{ block.settings.header }}</h3>
                  <div class="faq-icon"></div>
                </div>
                <div class="faq-answer">
                  {% case block.type %}
                    {% when 'item_2' %}
                      <div class="rte">
                        {{ block.settings.content }}
                        {{ block.settings.content_page.content }}
                      </div>
                    {% when 'liquid_2' %}
                      {{ block.settings.custom_liquid }}
                  {% endcase %}
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
      {% if image != blank %}</div>{% endif %}
      {% if image != blank %}</div>{% endif %}
    </div>
  </section>
{% endif %}

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const questions = document.querySelectorAll('.faq-question');

    questions.forEach((question) => {
      question.addEventListener('click', () => {
        const answer = question.nextElementSibling;
        const icon = question.querySelector('.faq-icon');

        answer.classList.toggle('active');
        icon.classList.toggle('active');

        questions.forEach((q) => {
          if (q !== question) {
            q.nextElementSibling.classList.remove('active');
            q.querySelector('.faq-icon').classList.remove('active');
          }
        });
      });
    });

    // Support for Shopify's section rendering events
    if (typeof Shopify !== 'undefined' && Shopify.designMode) {
      document.addEventListener('shopify:section:load', function (event) {
        const sectionQuestions = event.detail.sectionContainer.querySelectorAll('.faq-question');

        sectionQuestions.forEach((question) => {
          question.addEventListener('click', () => {
            const answer = question.nextElementSibling;
            const icon = question.querySelector('.faq-icon');

            answer.classList.toggle('active');
            icon.classList.toggle('active');

            sectionQuestions.forEach((q) => {
              if (q !== question) {
                q.nextElementSibling.classList.remove('active');
                q.querySelector('.faq-icon').classList.remove('active');
              }
            });
          });
        });
      });
    }
  });
</script>

